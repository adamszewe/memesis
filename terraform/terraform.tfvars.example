# AWS Configuration
aws_region  = "eu-west-1" # Ireland
environment = "prod"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["eu-west-1a", "eu-west-1b"]

# EC2 Configuration
instance_type    = "t3.small"
key_name         = "your-key-pair-name" # Create this in AWS EC2 console first
root_volume_size = 20

# Application Configuration
app_port = 8080

# Security
allowed_ssh_cidr_blocks = ["YOUR.IP.ADDRESS.HERE/32"] # Restrict to your IP

# Monitoring
enable_monitoring = true

# Domain Configuration (optional)
domain_name = "example.com" # Your domain name (creates Route53 hosted zone and DNS records)

# CI/CD Configuration
enable_github_oidc = true                      # Use OIDC for GitHub Actions (recommended)
github_repository  = "yourusername/memesis"    # Your GitHub repository (owner/repo)
create_ci_user     = false                     # Create IAM user with access keys (not recommended)
